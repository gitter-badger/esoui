        <!--
            A template for adding a checkbox to a parameteric scroll list.

            Intended that the setup function be set to "ZO_GamepadCheckBoxTemplate_Setup", and the
            selected functon set to "ZO_GamepadCheckBoxTemplate_OnClicked".

            Data must be a table, and may contain the following entries understood by the template:
                text - A string or function to display as text.
                checked - A function to be called to determine whether the box is currently checked.
                setChecked - A function called when the button is checked or unchecked.
        -->
        <Control name="ZO_CheckBoxTemplate_Gamepad" inherits="ZO_GamepadMenuEntryDimensionsTemplate" virtual="true">
            <OnInitialized>
                ZO_GamepadCheckBoxTemplate_OnInitialized(self)

                local checkBox = self:GetNamedChild("CheckBox")
                local label = self:GetNamedChild("Label")

                local offsetX = select(5, label:GetAnchor(0))
                label:SetWidth(ZO_GAMEPAD_CONTENT_WIDTH - checkBox:GetWidth() - offsetX)

                self.GetHeight = function(control)
                    return zo_max(checkBox:GetHeight(), label:GetTextHeight())
                end
            </OnInitialized>

            <Controls>
                <Button name="$(parent)CheckBox" inherits="ZO_GamepadCheckButton">
                    <Anchor point="LEFT"/>
                </Button>

                <Label name="$(parent)Label" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_SELECTED" font="ZoFontGamepad34" modifyTextType="UPPERCASE">
                    <Anchor point="LEFT" relativeTo="$(parent)CheckBox" relativePoint="RIGHT" offsetX="5"/>
                </Label>
            </Controls>
        </Control>

