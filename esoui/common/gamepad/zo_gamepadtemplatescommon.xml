        <Control name="ZO_TabBarScrollListTemplate" mouseEnabled="true" virtual="true">
            <OnMouseWheel>
                <!-- TODO: We should come up with a more robust "mouse interacting with gamepad screens" setup 
                     if we plan on supporting it -->
                local DONT_ALLOW_WRAPPING = false
                local SUPPRESS_FAIL_SOUND = true
                if delta > 0 then
                    self.scrollList:MoveNext(DONT_ALLOW_WRAPPING, SUPPRESS_FAIL_SOUND)
                else
                    self.scrollList:MovePrevious(DONT_ALLOW_WRAPPING, SUPPRESS_FAIL_SOUND)
                end
            </OnMouseWheel>

            <Controls>
                <Scroll name="$(parent)Scroll">
                    <AnchorFill />
                </Scroll>
            </Controls>
        </Control>

