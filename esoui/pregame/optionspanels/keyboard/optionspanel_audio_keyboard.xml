                self.data = KEYBOARD_OPTIONS:GetSettingsData(SETTING_PANEL_AUDIO, SETTING_TYPE_AUDIO, AUDIO_SETTING_AUDIO_VOLUME)
                ZO_OptionsWindow_InitializeControl(self)
            </OnInitialized>
        </Control>

