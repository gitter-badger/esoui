<GuiXml>
    <Controls>
        <Control name="Options_Audio_GeneralSection" inherits="ZO_Options_SectionTitle ZO_Options_PanelHeader">
            <OnInitialized>
                KEYBOARD_OPTIONS:SetSectionTitleData(self, SETTING_PANEL_AUDIO, SI_AUDIO_OPTIONS_GENERAL)
                ZO_OptionsWindow_InitializeControl(self)
            </OnInitialized>
        </Control>

